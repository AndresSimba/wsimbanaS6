<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wsimbanaS6.Views.vistaNuevoEstudiante"
             Title="vistaNuevoEstudiante">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Nombre"/>
        <Entry x:Name="txtNombre" Placeholder="Ingrese nombre"/>

        <Label Text="Apellido"/>
        <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"/>

        <Label Text="Edad"/>
        <Entry x:Name="txtEdad" Placeholder="Ingrese edad" Keyboard="Numeric"/>

        <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>